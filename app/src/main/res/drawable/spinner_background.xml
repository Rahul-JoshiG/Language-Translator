<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1A73E8" /> <!-- Highlighted color -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#0057B7" /> <!-- Accent stroke -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#3A3A3A" /> <!-- Slightly lighter color -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#FFFFFF" /> <!-- White stroke -->
        </shape>
        <color android:color="@color/white"/>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#555555" /> <!-- Dimmed color -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#707070" /> <!-- Subtle stroke -->
        </shape>
        <color android:color="@color/white"/>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2C2C2C" /> <!-- Default background color -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#404040" /> <!-- Default stroke -->
        </shape>
        <color android:color="@color/white"/>
    </item>
</selector>
