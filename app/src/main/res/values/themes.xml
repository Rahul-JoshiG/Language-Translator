<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/black</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set primary color to white -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#D9D9D9</item>
        <!-- Set status bar color to black (this will keep the status bar dark) -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Ensure icons are white in the status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Set splash screen background to white -->
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/white</item>
        <!-- Set background color for the entire activity to white -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <style name="Theme.LanguageTranslator" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/black</item>
    </style>

</resources>